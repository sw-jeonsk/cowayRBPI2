syntax on
 
filetype on
set encoding=utf-8
 
set fileencodings=utf-8,cp949,default,latin1
 
set termencoding=utf-8
 
set number
 
set autoindent
 
set cindent
 
set smartindent
 
set ruler
 
set nocompatible
 
set shiftwidth=4
 
set tabstop=4
 
set showmatch
 
set backspace=indent,eol,start
 
set backspace=2
 
set paste
 
set history=500
 
set hlsearch
 
 
set wrapscan
set ts=4 
set expandtab
 
highlight Comment term=bold cterm=bold ctermfg=5
